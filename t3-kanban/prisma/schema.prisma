// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
    provider = "prisma-client-js"
}

datasource db {
    provider = "cockroachdb"
    url      = env("DATABASE_URL")
}

model Post {
    id        String   @id @default(cuid())
    title     String
    createdAt DateTime @default(now())
    updatedAt DateTime @updatedAt

    @@index([title])
}

model User {
    id       String   @id @default(cuid())
    name     String   @unique
    kanbans  Kanban[]
    tasks    Task[]   @relation("CreatedByUser")
    assigned Task[]   @relation("AssignedToUser")

    @@index([name])
}

model Task {
    id          String   @id @default(cuid())
    title       String
    contentId   String?
    taskContent Content? @relation(fields: [contentId], references: [id])
    createdAt   DateTime @default(now())
    updatedAt   DateTime @updatedAt
    column      Column   @relation(fields: [columnId], references: [id])
    columnId    String
    assignedTo  User     @relation("AssignedToUser", fields: [userId], references: [id])
    createdBy   User     @relation("CreatedByUser", fields: [createdById], references: [id])
    userId      String
    createdById String
}

model Column {
    id        String   @id @default(cuid())
    title     String
    tasks     Task[]
    createdAt DateTime @default(now())
    updatedAt DateTime @updatedAt
    kanban    Kanban   @relation(fields: [kanbanId], references: [id])
    kanbanId  String
}

model Kanban {
    id        String   @id @default(cuid())
    title     String
    columns   Column[]
    createdAt DateTime @default(now())
    updatedAt DateTime @updatedAt
    owner     User     @relation(fields: [userId], references: [id])
    userId    String
}

model Content {
    id    String  @id @default(cuid())
    text  String
    links String?
    Task  Task[]
}
